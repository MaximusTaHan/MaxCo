@model MaxCoViewModels

@if (Model.OrderProducts.Count != 0)
{
    <div class="main-container container">
        <div class="row">
            @foreach(var order in Model.OrderProducts)
            {
                <div class="col-md-4 col-sm-4">
                    <div style="border: 2px solid black;">
                        <p class="product-name">
                            @order.ProductName
                        </p>
                        <form id="update-order-product" role="form" class="test"  asp-controller="Order" asp-action="UpdateOrder">
                            <input asp-for="@order.OrderId" type="hidden" class="form-control"/>
                            <input asp-for="@order.ProductName" class="form-control"/>
                            <input type="number" min="1" asp-for="@order.Quantity" class="order-product-quantity form-control"/>
                            <button type="submit" class="btn btn-danger">
                                Update Order
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
    <p type="text" class="insert-total">This needs to change</p>
    <form asp-action="Delete" asp-controller="Order" role="form">
        <input asp-for="@Model.OrderProducts[0].OrderId" type="hidden" class="form-control"/>
        <button type="submit" class="btn btn-danger">
            Empty cart
        </button>
    </form>
}
else
{
    <div>
        <h1>Your cart is empty</h1>
    </div>
}